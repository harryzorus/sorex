{
  "name": "search-benchmarks",
  "version": "1.0.0",
  "type": "module",
  "description": "Benchmarks comparing WASM suffix array search vs JS libraries",
  "scripts": {
    "bench": "bun run bench-js.ts",
    "bench:eu": "bun run bench-unified.ts",
    "bench:memory": "bun run --smol bench-memory.ts",
    "bench:sizes": "bun run bench-sizes.ts",
    "build:wasm": "cd .. && wasm-pack build --target web --release",
    "test:loader": "bun run test-loader.ts",
    "test:e2e": "bun run ../e2e/test-search.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/lunr": "^2.3.7",
    "@types/node": "^22.10.0",
    "flexsearch": "^0.7.43",
    "fuse.js": "^7.0.0",
    "glob": "^11.0.0",
    "lunr": "^2.3.9",
    "minisearch": "^7.1.0",
    "tinybench": "^2.9.0",
    "typescript": "^5.7.0"
  }
}
